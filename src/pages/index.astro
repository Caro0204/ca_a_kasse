---
import TopNavigation from "../components/TopNavigation.astro";
import MainLayout from "../components//MainLayout.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Babylonica&family=Corinthia:wght@400;700&family=Cutive+Mono&family=Ephesis&family=Open+Sans&family=Rajdhani&family=Sora&family=Tulpen+One&display=swap" rel="stylesheet">
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
	<div id="info">
	</div>
	<MainLayout>
		<section id="kampagnevideo" class="cirkel_img">
			<h1>Your carrier - <br>our business</h1>
			<img class="cirkel" src="/cirkel.svg" alt="cirkel">
		</section>
		 <a href="#target-section"><div class="arrow bouncing"></div></a>
		<section id="target-section">
			<h2>It's a match!</h2>
			<p>Det kan være svært at finde det perfekte match. <br> Er CA et match for dig?</p>
		</section>
		<section id="bliv_medlem">
			<img class="cirkel2" src="/cirkel.svg" alt="cirke2">
		</section>
	</MainLayout>
	

	</body>
	
</html>
<style>
/* FONTS */

h1{
	color: #0094D6;
	font-family: Nexa light;
}
p{
font-family: Open Sans, sans-serif;
}
.arrow {
  width: 0;
  height: 0;
  border-left: 20px solid transparent;
  border-right: 20px solid transparent;
  border-bottom: 18px solid #0092d696; /* Adjust color as needed */
  cursor: pointer;
  rotate: 180deg;
 margin: 0 auto;
 margin-top: 20px;
}
html {
  scroll-behavior: smooth;
}

.bouncing {
  animation-name: bouncing_kf;
  animation-duration: 1s;
  animation-direction: alternate;
  animation-iteration-count: infinite;
  animation-timing-function: linear;
  animation-timing-function: ease-in;
}

@keyframes bouncing_kf {
  from {
    translate: 0 -20%;
  }
  to {
    translate: 0 20%;
  }
}

.cirkel{
	width: 70%;
	margin-left: 140px;
	
}
.cirkel_img{
overflow: hidden;
margin-right: -9px;
}
</style>